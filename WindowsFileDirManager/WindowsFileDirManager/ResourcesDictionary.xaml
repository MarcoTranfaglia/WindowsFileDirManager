<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:WindowsFileDirManager.Converters"
                    xmlns:local="clr-namespace:WindowsFileDirManager">
    <conv:EnumToCollectionConverter x:Key="EnumToCollectionConverter" />
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="PathTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MinWidth" Value="50" />
        <Setter Property="Width" Value="150" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
</ResourceDictionary>